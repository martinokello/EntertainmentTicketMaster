@model EntertainmentTicketMaster.Models.PasswordRequestViewModel

@{
    ViewBag.Title = "RequestPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    div.body-content div, div.body-content {
        color: gray;
    }

    #body.home div div, #body.home div div:first-child {
        float: left;
        width: 960px;
    }

    .form-control {
        width: 250px;
        float: left;
    }

    .control-label {
        width: 150px;
        text-align: right;
        float: left;
    }
    div.validation-summary-errors ul li{
        color: #B94A48;
    }
</style>

<div class="body-content">
            @using (Html.BeginForm("ResetPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
    <div class="form-group">
        <h4>Reset Password.</h4>
        <hr /><br />
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })<span style="float: left;">&nbsp;</span>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserName, "*")
            <div>&nbsp;</div>
        </div>

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Reset Password" />
        </div>
    </div>
            }
</div>
