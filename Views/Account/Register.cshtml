@model EntertainmentTicketMaster.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<style type="text/css">
    div.body-content div, div.body-content {
        color: gray;
    }

    #body.home div div, #body.home div div:first-child {
        float: left;
        width: 960px;
    }
     .form-control {
        width: 250px;
        float: left;
    }
    .control-label {
        width: 150px;
        text-align: right;
        float: left;
    }
    div.validation-summary-errors ul li {
        color: #B94A48;
    }
</style>

<div class="body-content">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })<span style="float:left;">&nbsp;</span>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control textbox" })
			@Html.ValidationMessageFor(m => m.UserName,"*")
            <div>&nbsp;</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })<span style="float:left;">&nbsp;</span>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control textbox" })
			@Html.ValidationMessageFor(m => m.Email,"*")
            <div>&nbsp;</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })<span style="float:left;">&nbsp;</span>
                         @Html.PasswordFor(m => m.Password, new { @class = "form-control textbox" })
			@Html.ValidationMessageFor(m => m.Password,"*")
            <div>&nbsp;</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })<span style="float:left;">&nbsp;</span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control textbox" })
			@Html.ValidationMessageFor(m => m.ConfirmPassword,"*")
            <div>&nbsp;</div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    </div>
