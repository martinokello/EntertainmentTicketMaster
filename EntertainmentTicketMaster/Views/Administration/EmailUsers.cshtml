@model EntertainmentTicketMaster.Models.BulkEmailContentViewModel
@{
    ViewBag.Title = "EmailUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    div.body-content div {
        color: gray;
    }

    #body.home div div, #body.home div div:first-child {
        float: left;
        width: 960px;
    }
    div.validation-summary-errors ul li {
        color: #B94A48;
    }
	
	#body.home div div:first-child ul li{min-height:10px;width:100%;}
	#body.home div:first-child ul li{float:none;}
	div.validation-summary-errors ul li {color: #B94A48;}
</style>

<div class="body-content">
    <div>
        <h2>Send Bulk Email to users</h2>
        <p>
            Our website templates are created with inspiration, checked for quality and originality and meticulously sliced and coded. What’s more, they're absolutely free! You can do a lot with them. You can modify them. You can use them to design websites for clients, so long as you agree with the <a href="http://www.freewebsitetemplates.com/about/terms">Terms of Use</a>. You can even remove all our links if you want to.
        </p>
        <h3>We Have More Templates for You</h3>
        <div style="color: white; float: left; width: 100%;">
            @using (Html.BeginForm("EmailUsers", "Administration", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Email to Users.</h4>
                <hr />
                @Html.ValidationSummary()
                    @Html.LabelFor(m => m.EmailMessage, new { @class = "col-md-2 control-label" })<span style="float: left;">&nbsp;</span><br/>
                    <p style="width: 960px;">
                        @Html.TextAreaFor(m => m.EmailMessage, new { @class = "form-control",@cols=100, @rows=10})
                        @Html.ValidationMessageFor(m => m.EmailMessage, "*")
                    </p>
                    <div>&nbsp;</div>
                <div class="form-group">
                    @Html.Label("Browse to File attachment:", new { @class = "col-md-2 control-label" })<span style="float:left;">&nbsp;</span>
                    <input type="file" name="Attachment" title="Browse to file you wish to attach"/>
                    <div>&nbsp;</div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Submit email" />
                    </div>
                </div>
            }
        </div>

    </div>
</div>